<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.firstName + " " + @user.lastName %>
      </h1>
      <p><%= @user.email %></p>
      <% if current_user?(@user) %>
        Edit your information in <%= link_to "My Account", edit_user_path(current_user()) %> 
      <% end %>
    </td>
    <td class="sidebar round">
      <%= render "/shared/side" %>
    </td>
  </tr>
</table>
