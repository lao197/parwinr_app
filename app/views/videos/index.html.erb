<h1>Listing videos</h1>

<table>
  <tr>
    <th>Videoid</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @videos.each do |video| %>
  <tr>
    <td><%= video.videoID %></td>
    <td><%= video.videoType %></td>
    <td><%= link_to 'Show', video %></td>
    <% if is_admin? %>
      <td class="admin"><%= link_to 'Edit', edit_video_path(video) %></td>
      <td class="admin"><%= link_to 'Destroy', video, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

